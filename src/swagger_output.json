        }
      }
    },
    "Users": {
      "type": "object",
      "properties": {
        "status": {
          "type": "number",
          "example": 200
        },
        "message": {
          "type": "string",
          "example": "Succesfuly"
        },
        "users": {
          "type": "array",
          "example": [],
          "items": {}
