      }
    },
    "EspecificUser": {
      "type": "object",
      "properties": {
        "status": {
          "type": "number",
          "example": 200
        },
        "message": {
          "type": "string",
          "example": "Succesfuly"
        },
        "user": {
          "type": "object",
          "properties": {}
        }
      }
    },
    "CreateError": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Esse usuário já existe"
        }
      }
    },
    "DeletedUser": {
      "type": "object",
      "properties": {
        "status": {
          "type": "number",
          "example": 200
        },
        "message": {
