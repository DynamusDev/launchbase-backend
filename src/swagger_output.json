        },
        "error": {
          "type": "string",
          "example": "Este usuário não está mais cadastrado na nossa base de dados"
        }
      }
    },
    "ErrorToken": {
      "type": "object",
      "properties": {
        "status": {
          "type": "number",
          "example": 403
        },
        "error": {
          "type": "string",
