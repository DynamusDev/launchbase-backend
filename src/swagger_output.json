        "time": {
          "type": "string",
          "example": "09:00:00"
        },
        "message": {
          "type": "string",
          "example": "Hello guys"
        },
        "type": {
          "type": "string",
          "example": "text"
        },
        "author": {
          "type": "number",
          "example": 1
        }
      }
    },
    "Token": {
      "type": "object",
      "properties": {
